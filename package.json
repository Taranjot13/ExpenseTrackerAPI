{
  "name": "expense-tracker-api",
  "version": "1.0.0",
  "description": "Comprehensive Expense Tracker API with JWT authentication, WebSocket support, and MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:https": "set ENABLE_HTTPS=true&& node server.js",
    "dev": "nodemon server.js",
    "generate:ssl": "node utils/generate-ssl-nodejs.js",
    "cli:report": "node utils/cli-report.js",
    "setup:replication": "node utils/setup-replication.js",
    "docker:replication": "docker-compose -f docker-compose.replication.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.replication.yml down",
    "test": "jest --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:functional": "jest tests/functional --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:api": "node utils/test-external-api.js",
    "test:esm": "node utils/esmExample.mjs",
    "client": "npm start --prefix client",
    "dev:all": "node start-dev.js"
  },
  "keywords": [
    "expense-tracker",
    "jwt",
    "websocket",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.0",
    "redis": "^4.6.0",
    "socket.io": "^4.8.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "node-forge": "^1.3.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
