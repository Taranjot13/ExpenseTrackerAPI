<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker - Modern Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="app-container auth-mode" id="appContainer">
        <!-- Sidebar Navigation -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <i class="fas fa-wallet"></i>
                <h1>Expense Tracker</h1>
            </div>
            <nav class="sidebar-nav">
                <a href="#" class="nav-item active" data-page="dashboard">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a href="#" class="nav-item" data-page="expenses">
                    <i class="fas fa-receipt"></i> Expenses
                </a>
                <a href="#" class="nav-item" data-page="categories">
                    <i class="fas fa-tags"></i> Categories
                </a>
                <a href="#" class="nav-item" data-page="analytics">
                    <i class="fas fa-chart-pie"></i> Analytics
                </a>
                <a href="#" class="nav-item" data-page="profile">
                    <i class="fas fa-user"></i> Profile
                </a>
            </nav>
            <div class="sidebar-footer">
                <button id="logoutBtn" class="btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <button class="menu-toggle" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="header-right">
                    <div class="db-status">
                        <span class="status-indicator" id="mongoStatus" title="MongoDB">
                            <i class="fas fa-database"></i>
                        </span>
                        <span class="status-indicator" id="redisStatus" title="Redis">
                            <i class="fas fa-server"></i>
                        </span>
                        <span class="status-indicator" id="postgresStatus" title="PostgreSQL">
                            <i class="fas fa-table"></i>
                        </span>
                    </div>
                    <div class="user-info">
                        <span id="userName">User</span>
                        <i class="fas fa-user-circle"></i>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <div class="content-area">
                <!-- Dashboard Page -->
                <div id="dashboardPage" class="page active">
                    <div class="page-header">
                        <h2>Dashboard</h2>
                        <button class="btn-primary" id="addExpenseBtn">
                            <i class="fas fa-plus"></i> Add Expense
                        </button>
                    </div>

                    <!-- Stats Cards -->
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon blue">
                                <i class="fas fa-wallet"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Total Expenses</span>
                                <span class="stat-value" id="totalExpenses">$0.00</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon green">
                                <i class="fas fa-calendar-day"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">This Month</span>
                                <span class="stat-value" id="monthExpenses">$0.00</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon orange">
                                <i class="fas fa-receipt"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Total Transactions</span>
                                <span class="stat-value" id="totalTransactions">0</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon purple">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div class="stat-info">
                                <span class="stat-label">Categories</span>
                                <span class="stat-value" id="totalCategories">0</span>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Expenses -->
                    <div class="card">
                        <div class="card-header">
                            <h3>Recent Expenses</h3>
                            <button class="btn-secondary" id="refreshDashboard">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                        </div>
                        <div class="card-body">
                            <div id="recentExpensesList" class="expenses-list">
                                <!-- Will be populated by JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Expenses Page -->
                <div id="expensesPage" class="page">
                    <div class="page-header">
                        <h2>All Expenses</h2>
                        <div class="header-actions">
                            <input type="text" id="searchExpenses" placeholder="Search expenses..." class="search-input">
                            <button class="btn-primary" id="addExpenseBtn2">
                                <i class="fas fa-plus"></i> Add Expense
                            </button>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div id="expensesList" class="expenses-table">
                                <!-- Will be populated by JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Categories Page -->
                <div id="categoriesPage" class="page">
                    <div class="page-header">
                        <h2>Categories</h2>
                        <button class="btn-primary" id="addCategoryBtn">
                            <i class="fas fa-plus"></i> Add Category
                        </button>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div id="categoriesList" class="categories-grid">
                                <!-- Will be populated by JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Analytics Page -->
                <div id="analyticsPage" class="page">
                    <div class="page-header">
                        <h2>Analytics</h2>
                        <select id="analyticsTimeframe" class="select-input">
                            <option value="week">Last 7 Days</option>
                            <option value="month" selected>Last 30 Days</option>
                            <option value="year">Last Year</option>
                        </select>
                    </div>

                    <div class="analytics-grid">
                        <div class="card">
                            <div class="card-header">
                                <h3>Spending by Category</h3>
                            </div>
                            <div class="card-body">
                                <div id="categoryChart" class="chart-container">
                                    <!-- Chart will be rendered here -->
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h3>Daily Spending Trend</h3>
                            </div>
                            <div class="card-body">
                                <div id="trendChart" class="chart-container">
                                    <!-- Chart will be rendered here -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile Page -->
                <div id="profilePage" class="page">
                    <div class="page-header">
                        <h2>Profile</h2>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="profile-info">
                                <div class="profile-avatar">
                                    <i class="fas fa-user-circle"></i>
                                </div>
                                <div class="profile-details">
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" id="profileName" class="form-input" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" id="profileEmail" class="form-input" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label>Member Since</label>
                                        <input type="text" id="profileCreatedAt" class="form-input" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Add Expense Modal -->
    <div id="expenseModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Expense</h3>
                <button class="modal-close" id="closeExpenseModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="expenseForm">
                    <div class="form-group">
                        <label>Amount <span class="required">*</span></label>
                        <input type="number" id="expenseAmount" class="form-input" placeholder="0.00" step="0.01" required>
                    </div>
                    <div class="form-group">
                        <label>Description <span class="required">*</span></label>
                        <input type="text" id="expenseDescription" class="form-input" placeholder="Enter description" required>
                    </div>
                    <div class="form-group">
                        <label>Category <span class="required">*</span></label>
                        <select id="expenseCategory" class="form-input" required>
                            <option value="">Select category</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Date <span class="required">*</span></label>
                        <input type="date" id="expenseDate" class="form-input" required>
                    </div>
                    <div class="form-actions">
                        <button type="button" class="btn-secondary" id="cancelExpense">Cancel</button>
                        <button type="submit" class="btn-primary">Save Expense</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Category Modal -->
    <div id="categoryModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Category</h3>
                <button class="modal-close" id="closeCategoryModal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="categoryForm">
                    <div class="form-group">
                        <label>Category Name <span class="required">*</span></label>
                        <input type="text" id="categoryName" class="form-input" placeholder="Enter category name" required>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea id="categoryDescription" class="form-input" placeholder="Enter description" rows="3"></textarea>
                    </div>
                    <div class="form-actions">
                        <button type="button" class="btn-secondary" id="cancelCategory">Cancel</button>
                        <button type="submit" class="btn-primary">Save Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Login/Register Modal -->
    <div id="authModal" class="modal active">
        <div class="modal-content auth-modal">
            <div class="modal-body">
                <div class="auth-container">
                    <div class="auth-header">
                        <i class="fas fa-wallet"></i>
                        <h2>Expense Tracker</h2>
                    </div>

                    <!-- Login Form -->
                    <div id="loginForm" class="auth-form active">
                        <h3>Welcome Back</h3>
                        <form id="loginFormElement">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" id="loginEmail" class="form-input" placeholder="Enter your email" required>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" id="loginPassword" class="form-input" placeholder="Enter your password" required>
                            </div>
                            <button type="submit" class="btn-primary btn-block">Login</button>
                            <button type="button" id="clearSessionBtn" class="btn-secondary btn-block" style="margin-top: 10px;">Clear Session & Retry</button>
                        </form>
                        <p class="auth-switch">
                            Don't have an account? <a href="#" id="showRegister">Register</a>
                        </p>
                    </div>

                    <!-- Register Form -->
                    <div id="registerForm" class="auth-form">
                        <h3>Create Account</h3>
                        <form id="registerFormElement">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" id="registerName" class="form-input" placeholder="Enter your name" required>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" id="registerEmail" class="form-input" placeholder="Enter your email" required>
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" id="registerPassword" class="form-input" placeholder="Enter your password" required>
                            </div>
                            <button type="submit" class="btn-primary btn-block">Register</button>
                        </form>
                        <p class="auth-switch">
                            Already have an account? <a href="#" id="showLogin">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast"></div>

    <script src="/js/app.js"></script>
</body>
</html>
