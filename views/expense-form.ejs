<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/pages.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="main-content">
        <div class="expense-form-container">
            <div class="form-card">
                <div class="form-header">
                    <h1>
                        <i class="fas fa-plus-circle"></i> 
                        <%= typeof expense !== 'undefined' && expense ? 'Edit Expense' : 'Add New Expense' %>
                    </h1>
                </div>
                
                <form id="expenseForm" class="expense-form">
            <div class="form-group">
                <label for="description">
                    <i class="fas fa-align-left"></i> Description *
                </label>
                <input 
                    type="text" 
                    id="description" 
                    name="description" 
                    class="form-control"
                    placeholder="e.g., Grocery shopping, Restaurant bill" 
                    required
                    value="<%= typeof expense !== 'undefined' && expense ? expense.description : '' %>"
                >
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="amount">
                        <i class="fas fa-dollar-sign"></i> Amount *
                    </label>
                    <input 
                        type="number" 
                        id="amount" 
                        name="amount" 
                        class="form-control"
                        placeholder="0.00" 
                        step="0.01"
                        min="0.01"
                        required
                        value="<%= typeof expense !== 'undefined' && expense ? expense.amount : '' %>"
                    >
                </div>
                
                <div class="form-group">
                    <label for="date">
                        <i class="fas fa-calendar"></i> Date *
                    </label>
                    <input 
                        type="date" 
                        id="date" 
                        name="date" 
                        class="form-control"
                        required
                        value="<%= typeof expense !== 'undefined' && expense ? new Date(expense.date).toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>"
                    >
                </div>
            </div>
            
            <div class="form-group">
                <label for="category">
                    <i class="fas fa-tag"></i> Category *
                </label>
                <select id="category" name="category" class="form-control" required>
                    <option value="">Select a category</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="notes">
                    <i class="fas fa-sticky-note"></i> Notes (Optional)
                </label>
                <textarea 
                    id="notes" 
                    name="notes" 
                    class="form-control"
                    rows="3"
                    placeholder="Additional details about this expense..."
                ><%= typeof expense !== 'undefined' && expense && expense.notes ? expense.notes : '' %></textarea>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> 
                    <%= typeof expense !== 'undefined' && expense ? 'Update Expense' : 'Add Expense' %>
                </button>
                <a href="/expenses" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
                <% if (typeof expense !== 'undefined' && expense) { %>
                    <button type="button" id="deleteBtn" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                <% } %>
            </div>
        </form>
    </div>
</div>
</main>

<%- include('partials/footer') %>

<script src="/js/main.js"></script>
<script>
    <% if (typeof expense !== 'undefined' && expense) { %>
    const expenseData = <%- JSON.stringify(expense) %>;
    <% } else { %>
    const expenseData = null;
    <% } %>
</script>
<script src="/js/expense-form.js"></script>
</body>
</html>
