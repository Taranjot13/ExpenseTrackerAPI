<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/pages.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="main-content">
        <div class="dashboard-container">
            <div class="dashboard-header">
                <h1>
                    <i class="fas fa-chart-line"></i> Dashboard
                </h1>
                <p>Welcome back, <%= user.username || user.email %>!</p>
            </div>    <div class="stats-grid">
        <div class="stat-card stat-primary">
            <div class="stat-icon">
                <i class="fas fa-wallet"></i>
            </div>
            <div class="stat-details">
                <h3>Total Expenses</h3>
                <p class="stat-value" id="totalExpenses">$0.00</p>
            </div>
        </div>
        
        <div class="stat-card stat-success">
            <div class="stat-icon">
                <i class="fas fa-calendar-day"></i>
            </div>
            <div class="stat-details">
                <h3>This Month</h3>
                <p class="stat-value" id="monthExpenses">$0.00</p>
            </div>
        </div>
        
        <div class="stat-card stat-warning">
            <div class="stat-icon">
                <i class="fas fa-calendar-week"></i>
            </div>
            <div class="stat-details">
                <h3>This Week</h3>
                <p class="stat-value" id="weekExpenses">$0.00</p>
            </div>
        </div>
        
        <div class="stat-card stat-info">
            <div class="stat-icon">
                <i class="fas fa-receipt"></i>
            </div>
            <div class="stat-details">
                <h3>Total Transactions</h3>
                <p class="stat-value" id="totalCount">0</p>
            </div>
        </div>
    </div>
    
    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-list"></i> Recent Expenses
                </h2>
                <a href="/expenses" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
                <div id="recentExpenses">
                    <div class="loading">
                        <i class="fas fa-spinner fa-spin"></i> Loading...
                    </div>
                </div>
            </div>
        </div>
        
        <div class="dashboard-card">
            <div class="card-header">
                <h2>
                    <i class="fas fa-chart-pie"></i> Spending by Category
                </h2>
            </div>
            <div class="card-body">
                <canvas id="categoryChart"></canvas>
            </div>
        </div>
    </div>
    
    <div class="quick-actions">
        <h2>Quick Actions</h2>
        <div class="actions-grid">
            <a href="/expenses/new" class="action-card">
                <i class="fas fa-plus-circle"></i>
                <span>Add Expense</span>
            </a>
            <a href="/categories" class="action-card">
                <i class="fas fa-tags"></i>
                <span>Manage Categories</span>
            </a>
            <a href="/analytics" class="action-card">
                <i class="fas fa-chart-bar"></i>
                <span>View Analytics</span>
            </a>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>

<script src="https://cdn.socket.io/4.6.0/socket.io.min.js"></script>
<script src="/js/main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="/js/dashboard.js"></script>
</body>
</html>
