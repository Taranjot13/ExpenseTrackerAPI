# Server Configuration
PORT=5000
NODE_ENV=development

# HTTPS/TLS Configuration
# Set to 'true' to enable HTTPS (requires SSL certificates in ssl/ directory)
ENABLE_HTTPS=false
# Default paths (optional - will use these if not specified)
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# MongoDB Configuration (Required)
MONGODB_URI=mongodb://localhost:27017/expense_tracker

# MongoDB Replica Set (recommended for production)
# MONGODB_URI=mongodb://localhost:27017,localhost:27018,localhost:27019/expense_tracker?replicaSet=expenseTrackerRS&readPreference=secondaryPreferred&w=majority

# MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/expense_tracker?retryWrites=true&w=majority

# Redis Configuration (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Redis URL format (alternative to above)
# REDIS_URL=redis://username:password@host:port

# PostgreSQL Configuration (Optional - for future implementation)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=expense_tracker

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_key
JWT_REFRESH_EXPIRE=30d

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# SSL/TLS (for production)
SSL_KEY_PATH=
SSL_CERT_PATH=
